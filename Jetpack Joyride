        #call self.buttonFunction(app)
#app.myButton=(self,buttonFunction)

class gadgetButton:
    def __init__(self,x,y,price,buttonFunction):
        self.x=x
        self.y=y
        self.price=price
        self.width=80
        self.height=80
        self.buttonFunction=buttonFunction
        self.unlocked=False
        self.activated=False
    def drawButton(self):
        if self.unlocked:
            buttonFill=None
            buttonBorder='green'
        else:
            buttonFill='lightGrey'
            buttonBorder='red'
        drawRect(self.x,self.y,self.width,self.height,fill=buttonFill,border=buttonBorder)
    def checkForPress(self,app,mouseX,mouseY):
        if ((self.x<=mouseX<=self.x+self.width)and
            (self.y<=mouseY<=self.y+self.height)):
            if (self.unlocked):
                self.activated=not self.activated
            elif (app.totalCoins>=self.price):
                self.unlocked=True
        self.buttonFunction(app,self.activated)

def magnetismGadget(app,activated):
    if activated:
        app.coinCollectRadius=app.playerRadius+10
    else:
        app.coinCollectRadius=app.playerRadius

def doubleCoinsGadget(app,activated):
    if activated:
        app.coinAdder=2
    else:
        app.coinAdder=1

def pressInPlayGame(app,mouseX,mouseY):
    if((app.playGameButtonX<=mouseX<=app.playGameButtonX+
        app.playGameButtonWidth)and(app.playGameButtonY<=mouseY<=
        app.playGameButtonY+app.playGameButtonHeight)):
        return True
    else:
        return False


#FROM CMU CS ACADEMY
def distance(x0, y0, x1, y1):
    return ((x1 - x0)**2 + (y1 - y0)**2)**0.5

def drawBoard(app):
    for row in range(app.rows):
        for col in range(app.cols):
            color = app.board[row][col]
            drawCell(app, row, col, color)

def drawCell(app, row, col, color):
    cellLeft, cellTop = getCellLeftTop(app, row, col)
    cellWidth, cellHeight = getCellSize(app)
    drawRect(cellLeft, cellTop, cellWidth, cellHeight,
             fill=color, border='lightGrey',
             borderWidth=app.cellBorderWidth)

def getCell(app, x, y):
    dx = x - app.boardLeft
    dy = y - app.boardTop
    cellWidth, cellHeight = getCellSize(app)
    row = math.floor(dy / cellHeight)
    col = math.floor(dx / cellWidth)
    if (0 <= row < app.rows) and (0 <= col < app.cols):
      return (row, col)
    else:
      return None

def getCellLeftTop(app, row, col):
    cellWidth, cellHeight = getCellSize(app)
    cellLeft = app.boardLeft + col * cellWidth
    cellTop = app.boardTop + row * cellHeight
    return (cellLeft, cellTop)

def getCellSize(app):
    cellWidth = app.boardWidth / app.cols
    cellHeight = app.boardHeight / app.rows
    return (cellWidth, cellHeight)

def drawBoard(app):
    for row in range(app.rows):
        for col in range(app.cols):
            color = app.board[row][col]
            drawCell(app, row, col,color)

def main():
    runApp()

if __name__=='__main__':
    main()

