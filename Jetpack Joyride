def onStep(app):
    if app.playing:
        app.steps+=1
        #app.playingScreen to the left and loop image
        if app.steps%10:
            pass
            #addzapper to ZapperList
    else:
        app.steps=0

def redrawAll(app):
    drawBoard(app)
    for zapper in app.zapperList:
        drawZapper(app,zapper.pixels,zapper.angle,zapper.heightRow)


#Obstacles***
#angles: 0=horizontal,1=45 degrees, 2=vertical, 3=135 degrees
#pixels: in range of 1/2? of app.rows--longer zappers are less likely?
class zapper:
    def __init__(self,pixels,angle,heightRow):
        self.pixels=pixels
        self.angle=angle
        self.heightRow=heightRow

def drawZapper(app,pixels,angle,heightRow):
    col=((app.cols*3)//4)-5
    if angle==0:
        for i in range (pixels):
            app.board[heightRow][col]='yellow'
            col+=1
    elif angle==1:
        #to check make sure the zapper is in the board
        while ((heightRow-pixels)<-1):
            heightRow+=1
        for i in range(pixels):
            app.board[heightRow][col]='yellow'
            heightRow-=1
            col+=1
    elif angle==2:
        #to check make sure the zapper is in the board
        while ((heightRow+pixels)>app.rows):
            heightRow-=1
        for i in range(pixels):
            app.board[heightRow][col]='yellow'
            heightRow+=1
    elif angle==3:
        #to check make sure the zapper is in the board
        while ((heightRow+pixels)>app.rows):
            heightRow-=1
        for i in range(pixels):
            app.board[heightRow][col]='yellow'
            heightRow+=1
            col+=1


#FROM CMU CS ACADEMY
def drawBoard(app):
    for row in range(app.rows):
        for col in range(app.cols):
            drawCell(app, row, col, color)

def drawCell(app, row, col,color):
    cellLeft, cellTop = getCellLeftTop(app, row, col)
    cellWidth, cellHeight = getCellSize(app)
    drawRect(cellLeft, cellTop, cellWidth, cellHeight,
             fill=color, border='black',
             borderWidth=app.cellBorderWidth)

def getCell(app, x, y):
    dx = x - app.boardLeft
    dy = y - app.boardTop
    cellWidth, cellHeight = getCellSize(app)
    row = math.floor(dy / cellHeight)
    col = math.floor(dx / cellWidth)
    if (0 <= row < app.rows) and (0 <= col < app.cols):
      return (row, col)
    else:
      return None

def getCellLeftTop(app, row, col):
    cellWidth, cellHeight = getCellSize(app)
    cellLeft = app.boardLeft + col * cellWidth
    cellTop = app.boardTop + row * cellHeight
    return (cellLeft, cellTop)

def getCellSize(app):
    cellWidth = app.boardWidth / app.cols
    cellHeight = app.boardHeight / app.rows
    return (cellWidth, cellHeight)

def drawBoard(app):
    for row in range(app.rows):
        for col in range(app.cols):
            color = app.board[row][col]
            drawCell(app, row, col,color)

def main():
    runApp()

if __name__=='__main__':
    main()