##scaffolding for game function
def onAppStart(app):
    app.BestDistance=0
    app.coins=0
    app.menuScreen=True
    app.shopScreen=False
    app.gadgetScreen=False
    app.jetpackSkinScreen=False
    app.activeScreen=False
    ##when the game is being played
    app.playing=False
    resetApp(app)

