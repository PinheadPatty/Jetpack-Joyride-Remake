    #app.jetpackSkinScreen=image
    app.playing=False
    #app.playingScreen=image
    app.stepsPerSecond=1
    app.width=400
    app.height=420
    app.boardWidth=800
    app.boardheight=400
    app.rows=app.boardHeight/2
    app.cols=app.boardWidth/2
    app.cellBorderWidth=2
    app.steps=0
    #zapperList=[]

